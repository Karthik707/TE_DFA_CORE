@model IEnumerable<DFA_CORE.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>&nbsp;<i class="fa-sharp fa-solid fa-circle-plus"></i>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-sharp fa-solid fa-pen-to-square"></i>Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-sharp fa-solid fa-circle-info"></i>Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-sharp fa-solid fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
